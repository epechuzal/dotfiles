#!/usr/bin/env bash
#
# Run all dotfiles installers.

set -e

cd "$(dirname $0)"/..

# Homebrew first â€” other topics depend on packages it installs (node, etc.)
sh -c ./homebrew/install.sh

# find the remaining installers and run them iteratively
find . -name install.sh -not -path ./homebrew/install.sh | while read installer ; do sh -c "${installer}" ; done
