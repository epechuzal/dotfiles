#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

set -e

dotfilesDirectory=~/Workspace/dotfiles

displayUsageAndExit() {
	echo "dot -- dotfiles management"
	echo ""
	echo "Usage: dot [options]"
	echo ""
	echo "Options:"
	echo "  -e, --edit    Open dotfiles directory for editing"
	echo "  -h, --help    Show this help message and exit"
	exit
}

while test $# -gt 0; do
	case "$1" in
		"-h"|"--help")
			displayUsageAndExit
			;;
		"-e"|"--edit")
			exec "$EDITOR" "$dotfilesDirectory"
			exit
			;;
		*)
			echo "Invalid option: $1"
			displayUsageAndExit
			;;
	esac
	shift
done

export DOTFILESDIR=$dotfilesDirectory

# Set macOS defaults
$DOTFILESDIR/macos/set-defaults.sh

# Install software (includes homebrew setup if missing)
echo "› $DOTFILESDIR/script/install"
$DOTFILESDIR/script/install

# Update homebrew (only if installed)
if command -v brew > /dev/null 2>&1; then
  echo "› brew update"
  brew update
fi
